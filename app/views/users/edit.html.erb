<%= render "form", user: @user %>
<div>
  <%= link_to "Back to users", users_path %>
  <img src="<%= @picsum_url %>" alt="User's Picture">
</div>

<p>Albums:</p>
<ul>
  <% @albums.each do |album| %>
    <li>
      <img src="<%= "https://via.placeholder.com/150/#{album['id']}" %>" alt="Album's Picture">
      <%= album['title'] %>
      <a href="#" class="view-album-photos" data-album-id="<%= album['id'] %>">View Photos</a>
    </li>
  <% end %>
</ul>

