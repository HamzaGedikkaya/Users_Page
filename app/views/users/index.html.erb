<h1>Users</h1>
  
<%= search_form_for @q do |f| %>
  <div >
    <%= f.search_field :username_cont, class:"form-control"%>
    <%= f.submit "Search" %>
  </div>
<% end %>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
      <img src="<%= "https://picsum.photos/id/#{user.id}/250/166" %>" alt="User's Picture">
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>